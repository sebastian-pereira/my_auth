<%= form_tag :controller => :login, :action => :login do %>
<table>
	<tr>
		<td>E-mail</td>
		<td><%= text_field :user, :email %></td>
	</tr>
	<tr>
		<td>Пароль</td>
		<td><%= password_field :user, :password%></td>
	</tr>
	<tr>
		<td></td>
		<td><%= submit_tag 'Вход' %></td>
	</tr>
</table>
<% end %>